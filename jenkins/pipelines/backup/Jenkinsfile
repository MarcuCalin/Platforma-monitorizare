// Pipeline Jenkins pentru CI/CD al scriptului Python de backup

pipeline {
    agent {
        docker { image 'python:3.11-slim' }
    }

    environment {
        DOCKERHUB_USER = 'marcu001'
        IMAGE_NAME = 'system-backup'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Clonăm repository-ul...'
                git branch: 'main', url: 'https://github.com/MarcuCalin/Platforma-monitorizare.git'
            }
        }

        stage('Syntax Check') {
            steps {
                echo 'Verificare sintaxă Python...'
                sh 'python3 -m py_compile ../../scripts/backup.py'
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Rulare teste unitare... (simulare)'
                sh 'echo "Toate testele au trecut cu succes!"'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Construim imaginea Docker pentru backup...'
                sh '''
                    docker build -t ${DOCKERHUB_USER}/${IMAGE_NAME}:latest -f ../../docker/Dockerfile.backup .
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Publicăm imaginea în Docker Hub...'
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKERHUB_USER}/${IMAGE_NAME}:latest
                        docker logout
                    '''
                }
            }
        }

        stage('Cleanup') {
            steps {
                echo 'Ștergem imaginile temporare...'
                sh 'docker rmi ${DOCKERHUB_USER}/${IMAGE_NAME}:latest || true'
            }
        }
    }

    post {
        success {
            echo 'Pipeline finalizat cu succes!'
        }
        failure {
            echo 'Pipeline eșuat!'
        }
    }
}
